<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical"
    android:id="@+id/content1">

    <LinearLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        app:layout_behavior="android.support.design.widget.BottomSheetBehavior">





    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:id="@+id/toolbar"
        android:background="@color/orange"
        android:orientation="horizontal">


        <ImageView
            android:layout_width="25dp"
            android:layout_height="25dp"
            android:padding="5dp"
            android:id="@+id/back"
            android:paddingLeft="5dp"
            android:layout_marginLeft="5dp"
            android:src="@drawable/ic_back"
            android:layout_gravity="center_vertical"/>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:gravity="center_vertical"
            android:layout_gravity="center_vertical"
            android:text="Feedback"
            android:textStyle="bold"
            android:layout_marginLeft="20dp"
            android:textSize="20sp"
            android:textColor="@color/white">
        </TextView>
    </LinearLayout>




        <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        android:background="@color/white"
            android:id="@+id/layout">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Please share your Feedback"
            android:padding="5dp"
            android:layout_marginLeft="5dp"
            android:textSize="16sp"
            android:textColor="@color/black"
            android:textStyle="bold"/>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical"
            android:padding="2dp"
            android:background="@color/white">

            <TextView
                android:layout_width="match_parent"
                android:layout_height="45dp"
                android:text="Poor Listing Quality"
                android:background="@drawable/txt_backgeound"
               android:id="@+id/poor_listing"
                android:layout_marginLeft="10dp"
                android:paddingLeft="10dp"
                android:layout_marginRight="10dp"
                android:gravity="center_vertical"
               >

            </TextView>

            <TextView
                android:layout_width="match_parent"
                android:layout_height="45dp"
                android:text="Search Issues"
                android:layout_marginTop="5dp"
                android:background="@drawable/txt_backgeound"
                 android:id="@+id/searchisuue"
                android:layout_marginLeft="10dp"
                android:paddingLeft="10dp"
                android:layout_marginRight="10dp"
                android:gravity="center_vertical"
               >

            </TextView>

            <TextView
                android:layout_width="match_parent"
                android:layout_height="45dp"
                android:text="App Crash / Slow Speed"
                android:id="@+id/crash"
                android:background="@drawable/txt_backgeound"
                android:layout_gravity="center_vertical"
                android:layout_marginLeft="10dp"
                android:layout_marginTop="5dp"
                android:layout_marginRight="10dp"
                android:gravity="center_vertical"
                android:paddingLeft="10dp">

            </TextView>

            <TextView
                android:layout_width="match_parent"
                android:layout_height="45dp"
                android:text="Post Property / Login Issues"
                android:id="@+id/login_issue"
                android:background="@drawable/txt_backgeound"
                android:layout_gravity="center_vertical"
                android:layout_marginLeft="10dp"
                android:layout_marginTop="5dp"
                android:layout_marginRight="10dp"
                android:gravity="center_vertical"
               android:paddingLeft="10dp">

            </TextView>

            <TextView
                android:layout_width="match_parent"
                android:layout_height="45dp"
                android:text="Notiifcation Issues"
                android:background="@drawable/txt_backgeound"
                android:layout_gravity="center_vertical"
                android:layout_marginLeft="10dp"
                android:layout_marginTop="5dp"
                android:layout_marginRight="10dp"
                android:gravity="center_vertical"
               android:paddingLeft="10dp">

            </TextView>

            <TextView
                android:layout_width="match_parent"
                android:layout_height="45dp"
                android:text="Others"
                android:id="@+id/others"
                android:background="@drawable/txt_backgeound"
                android:layout_gravity="center_vertical"
                android:layout_marginLeft="10dp"
                android:layout_marginTop="5dp"
                android:layout_marginRight="10dp"
                android:gravity="center_vertical"
               android:paddingLeft="10dp">

            </TextView>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="10dp"
                android:layout_marginTop="5dp"
                android:visibility="gone"
                android:id="@+id/lay_visible"
                android:layout_marginRight="10dp"
                android:orientation="vertical">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Please tell us the issues in detail(optional)"
                    android:textColor="@color/black"
                    android:textStyle="bold"/>

                <EditText
                    android:layout_width="match_parent"
                    android:layout_height="45dp"
                    android:id="@+id/optional"
                    android:hint="Optional"
                    />

            </LinearLayout>



        </LinearLayout>
        <Button
            android:layout_width="match_parent"
            android:layout_height="45dp"
            android:text="SEND FEEDBACK"
            android:textColor="@color/white"
            android:background="@drawable/txt_backgeound"
           android:backgroundTint="@color/orange"
            android:layout_marginLeft="10dp"
            android:layout_marginTop="5dp"
            android:layout_marginRight="10dp"

            android:paddingLeft="10dp">

        </Button>


    </LinearLayout>



</LinearLayout>
</FrameLayout>