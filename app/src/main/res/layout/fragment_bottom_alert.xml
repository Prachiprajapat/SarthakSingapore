<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".Fragments.BottomAlertFragment">

   <androidx.appcompat.widget.Toolbar
       android:layout_width="match_parent"
       android:background="#FD0505"
       android:id="@+id/toolbar"
       android:layout_height="50dp">
<RelativeLayout
    android:layout_width="match_parent"
    android:layout_height="50dp">
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Notification(3)"
        android:textColor="#FFF"
        android:textSize="18sp"
        android:textStyle="bold"
        android:layout_centerVertical="true"
        ></TextView>
       <ImageView
           android:layout_width="30dp"
           android:layout_marginRight="20dp"
           android:layout_alignParentEnd="true"
           android:layout_marginTop="5dp"
           android:layout_centerInParent="true"
           android:layout_alignParentRight="true"
           android:id="@+id/img_setting"
           android:layout_height="30dp"
           android:src="@drawable/ic_settings"></ImageView>
</RelativeLayout>
   </androidx.appcompat.widget.Toolbar>

    <androidx.recyclerview.widget.RecyclerView
        android:layout_width="match_parent"
        android:layout_marginTop="60dp"
      android:layout_marginRight="7dp"
        android:layout_marginLeft="7dp"
        android:layout_marginBottom="7dp"
        android:layout_height="match_parent"
        android:id="@+id/recycle_notification"></androidx.recyclerview.widget.RecyclerView>

</FrameLayout>