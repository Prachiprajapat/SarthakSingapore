<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:id="@+id/toolbar"
        android:background="@color/orange"
        android:orientation="horizontal">

        <ImageView
            android:layout_width="25dp"
            android:layout_height="25dp"
            android:padding="5dp"
            android:id="@+id/back"
            android:paddingLeft="5dp"
            android:layout_marginLeft="5dp"
            android:src="@drawable/ic_back"
            android:layout_gravity="center_vertical"/>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:gravity="center_vertical"
            android:layout_gravity="center_vertical"
            android:text="Explore Localities"
            android:textStyle="bold"
            android:layout_marginLeft="20dp"
            android:textSize="20sp"
            android:textColor="@color/white">
        </TextView>
    </LinearLayout>

    <TextView
        android:layout_below="@+id/toolbar"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Location"
        android:textColor="#000"
        android:textSize="13sp"
        android:id="@+id/txtloc"
        android:textStyle="bold"
        android:layout_marginTop="15dp"
        android:layout_marginLeft="20dp"></TextView>

    <EditText
        android:layout_width="match_parent"
        android:layout_below="@+id/txtloc"
        android:hint="City,Locality"
        android:layout_marginLeft="15dp"
        android:layout_marginTop="5dp"
        android:paddingLeft="10dp"
        android:id="@+id/etCityLoc"
        android:drawableRight="@drawable/ic_my_location_black_24dp"
        android:layout_marginRight="15dp"
        android:layout_height="60dp"></EditText>

    <Button
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:hint="SEARCH"
        android:id="@+id/btnSearch"
        android:background="@color/colorAccent"
        android:layout_below="@+id/etCityLoc"
        android:layout_marginTop="10dp"
        android:layout_marginLeft="18dp"
        android:layout_marginRight="18dp"
        android:textColorHint="#FFF"></Button>
    

</RelativeLayout>